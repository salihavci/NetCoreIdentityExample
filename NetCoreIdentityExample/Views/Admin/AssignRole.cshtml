@model List<UserRoleVM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayoutcshtml.cshtml";
}
<h2>Kullanıcıya Rol Atama (@ViewBag.username)</h2>
<hr />
<form asp-action="AssignRole" asp-controller="Admin" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].IsChecked" type="checkbox" class="form-check-input"/>
            <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>
            <input asp-for="@Model[i].RoleName" type="hidden" />
            <input asp-for="@Model[i].RoleId" type="hidden" />
        </div>
    }
    <input class="btn btn-primary" type="submit" value="Rol Ata" />
</form>
