@model ResetPasswordVM

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}<div class="row">
    <div class="col-8 offset-2">
        @if(ViewBag.status == "Success")
        {
        <div class="alert alert-info" mt-4>
            Şifreniz başarı ile değiştirilmiştir. Yeni şifreniz ile giriş yapabilirsiniz.       
            <a asp-action="Login" asp-controller="Home" class="btn btn-link">Giriş için tıklayınız.</a>
        </div>
        }
        else
        {


        <form asp-action="ResetPasswordConfirm" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>