@model TwoFactorLoginVM
@{
    ViewData["Title"] = "TwoFactorLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{ 
    <script type="text/javascript">

        $("#sendEmail").click(() => {
            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                url: "./AgainSendEmail",
                dataType: "json",
                success: function (response) {
                    if (response == true) {
                        alert("Doğrulama kodunuz tekrar email adresinize gönderilmiştir.");
                    }
                    else {
                        alert("Bir hata meydana geldi.");
                    }
                },
                error: function () {
                    alert("Bir hata meydana geldi.");
                }
            });
        });

        $(document).ready(() => {
            var timeLeft = parseInt("@ViewBag.timeLeft");
            function makeTimer() {
                var minute = Math.floor(timeLeft / 60);
                var second = Math.floor(timeLeft - (minute * 60));
                if (minute < 10) { minute = "0" + minute };
                if (second < 10) { second = "0" + second };
                $("#minute").html(minute);
                $("#second").html(second);
                timeLeft--;
                if (timeLeft == 0) {
                    window.location.href = "/Home/Login";
                }
            }
            makeTimer();
            setInterval(()=> makeTimer(),1000);
        });
    </script>
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>İki adımlı kimlik doğrulama</h4>
        <hr />
        <form asp-action="TwoFactorLogin" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group">
                <label asp-for="VerificationCode" class="col-form-label"></label>
                <input asp-for="VerificationCode" class="form-control" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="isRememberMe" /> Beni Hatırla
            </div>
            @if (Model.TwoFactorType == TwoFactor.MicrosoftGoogle)
            {
                <div class="form-group">
                    <input type="checkbox" asp-for="isRecoverCode" /> Kurtarma kodu girmek için bu kutucuğu işaretleyiniz.
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Gönder" class="btn btn-block btn-info col-12" />
                @if (Model.TwoFactorType == TwoFactor.Email)
                { 
                    <input type="button" value="Tekrar Email Gönder" id="sendEmail" class="btn btn-block btn-info col-12" />
                }
            </div>
        </form>

        @if (Model.TwoFactorType == TwoFactor.Email || Model.TwoFactorType == TwoFactor.Phone)
        { 
            <div class="alert alert-primary">
                <span class="text-primary" id="minute"></span> Dakika <span class="text-primary" id="second"></span> Saniye kaldı.
            </div>   
        }
        <div class="alert alert-info">
            @switch (Model.TwoFactorType)
            {
             
                case TwoFactor.Phone:
                    <span>Telefonunuza gelen SMS kodunu bu alana giriniz.</span>
                    break;
                case TwoFactor.Email:
                    <span>Email adresinize gelen kodu bu alana giriniz.</span>
                    break;
                case TwoFactor.MicrosoftGoogle:
                    <span>Microsoft/Google Authenticator uygulamanızdaki kodu bu alana giriniz.</span>
                    break;
                default:
                    break;
            }
        </div>
    </div>
</div>

