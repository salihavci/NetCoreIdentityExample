@model UserVM
@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-3">
        <img src="~/img/userimg.png" style="width:100%; height:100%;"/>
    </div>
    <div class="col-9 table-responsive mt-5">
        <table class="table table-bordered table-striped">

            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-Posta</th>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <th>Telefon No</th>
                <td>@Model.PhoneNumber</td>
            </tr>


        </table>
    </div>
</div>
