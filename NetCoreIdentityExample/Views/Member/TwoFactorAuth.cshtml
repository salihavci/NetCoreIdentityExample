@model AuthenticatorVM
@{
    ViewData["Title"] = "TwoFactorAuth";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>İki Adımlı Kimlik Doğrulama</h2>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="TwoFactorAuth" asp-controller="Member" method="post">
            <div class="form-group">
                <label asp-for="TwoFactorType" class="col-form-label"></label>
                <select asp-for="TwoFactorType" class="form-control" asp-items="Html.GetEnumSelectList<TwoFactor>()">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </form>
    </div>
    @if (ViewBag.warning != null)
    {
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-warning">
                @ViewBag.warning
            </div>
        </div>
    }
    @if (TempData["message"] != null)
    {
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-info">
                @TempData["message"]
            </div>
        </div>
    }
    @if (TempData["recoveryCodes"] != null)
    {
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-info">
                Aşağıdaki kodları güvenli bir yerde saklayınız. Microsoft/Google Authenticator uygulamasını kullanamadığınız durumlarda bu kurtarma kodları kullanabilirsiniz.
            </div>
            <div class="alert alert-secondary">
                @foreach (var item in TempData["recoveryCodes"] as string[]) //RecoveryCodes bir string dizisi anlamına gelir
                {
                    <strong>@item</strong>
                }
            </div>
        </div>
    }
</div>

